<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="8dp"
  app:cardElevation="2dp"
  app:cardCornerRadius="4dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Layer header -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="12dp"
      android:gravity="center_vertical">

      <!-- Layer name -->
      <TextView
        android:id="@+id/layerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

      <!-- Enable toggle -->
      <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/layerEnabledSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:checked="true" />

      <!-- Delete button -->
      <ImageButton
        android:id="@+id/deleteLayerButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Delete layer" />

    </LinearLayout>

    <!-- Divider -->
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray"
      android:alpha="0.2" />

    <!-- Parameters container (dynamically populated) -->
    <LinearLayout
      android:id="@+id/parametersContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="12dp" />

  </LinearLayout>

</com.google.android.material.card.MaterialCardView>
