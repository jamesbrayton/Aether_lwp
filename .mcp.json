{
  "mcpServers": {
    "memoryBank": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "github:jamesbrayton/memory-bank-mcp"
      ],
      "env": {
        "MEMORY_BANK_ROOT": "/workspace/.memoryBank"
      }
    },
    "context7": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@upstash/context7-mcp"
			]
		},
		"filesystem": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"/workspace"
			]
		},
		"markitdown": {
			"type": "stdio",
			"command": "uvx",
			"args": [
				"markitdown-mcp==0.0.1a4"
			]
		},
    "microsoftdocs": {
			"type": "http",
			"url": "https://learn.microsoft.com/api/mcp"
		}
  }
}